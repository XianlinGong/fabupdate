[Unit]
Description=Fabcoin's distributed currency daemon
After=network.target

[Service]
User=ubuntu

Type=forking
PIDFile=/home/ubuntu/.fabcoinsc/fabcoind.pid
ExecStart= /usr/local/bin/fabcoind -server -listen -rpcuser=fabcoin -rpcpassword=fabcoin -daemon -rest -rpcallowip=0.0.0.0/0 -txindex=1 -logevents -rpcworkqueue=100 -blockmaxconflict=12
Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=10s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
